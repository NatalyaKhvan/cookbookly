<div class="page-container ingredient-detail">
  <h1 class="page-title"><%= @ingredient.name %></h1>

  <h2>Used in:</h2>
  <% if @ingredient.recipes.any? %>
    <ul class="recipe-list">
      <% @ingredient.recipes.each do |recipe| %>
        <li class="recipe-item">
          <%= link_to recipe.title, recipe_path(recipe), class: "recipe-link" %>
          By: <%= recipe.user.username %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>This ingredient hasnâ€™t been used in any recipes yet.</p>
  <% end %>

  <div class="button-row">
    <%= link_to "Back to Ingredients", ingredients_path, class: "btn-link" %>
  </div>
</div>
