<div class="page-container sessions-container">
  <h1 class="page-title">Log In</h1>

  <%= form_with url: login_path, method: :post, local: true, class: "login-form" do |form| %>
    <div class="form-group">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, required: true, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, required: true, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.submit "Log In", class: "btn-primary" %>
    </div>
  <% end %>

  <p class="signup-prompt">
    Don't have an account?
    <%= link_to "Sign Up", new_user_path, class: "link-signup" %>
  </p>
</div>
