<div class="form-container">
  <%= render 'shared/form_errors', object: @user %>

  <%= form_with(model: @user, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :username %>
      <%= form.text_field :username, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password, (@user.persisted? ? "New Password (Please leave blank to keep current)" : "Password") %>
      <%= form.password_field :password, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= form.submit (@user.persisted? ? "Update Account" : "Create User"), class: "btn-primary" %>
    </div>
  <% end %>
</div>
