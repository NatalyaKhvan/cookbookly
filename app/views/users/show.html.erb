<div class="page-container">
  <h1 class="page-title"><%= @user.username %>'s Profile</h1>
  <p><strong>Email:</strong> <%= @user.email %></p>

  <% if current_user == @user %>
    <div class="button-row">
      <%= link_to "Edit Account", edit_user_path(@user), class: "btn-link" %>
      <%= link_to "Delete Account", user_path(@user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-danger" %>
    </div>
  <% end %>

  <%= link_to 'Back to Users', users_path, class: "btn-link" %>
</div>
