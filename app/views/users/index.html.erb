<div class="page-container user-form-page">
  <h1 class="page-title">All Users</h1>

  <% if @users.any? %>
    <ul class="item-list">
      <% @users.each do |user| %>
        <li class="item item--user">
          <%= link_to user.username, user_path(user), class: "btn-link" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>You havenâ€™t added any users yet.</p>
  <% end %>
</div>
