<% if object.errors.any? %>
  <div id="error_explanation" class="form-errors">
    <h2>Please fix the <%= pluralize(object.errors.count, "error") %> below:</h2>
    <ul>
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>