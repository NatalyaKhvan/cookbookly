<div class="page-container">
  <h1 class="page-title">All Categories</h1>

  <% if @categories.any? %>
    <div class="category-grid">
      <% @categories.each do |category| %>
        <div class="category-card">
          <%= link_to category.name, category_path(category), class: "category-link" %>

          <% if current_user %>
            <div class="button-row">
              <%= link_to "Edit", edit_category_path(category), class: "btn-link" %>
              <%= link_to "Delete", category_path(category), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-link" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No categories added yet.</p>
  <% end %>

  <div class="form-group">
    <%= link_to "Add a New Category", new_category_path, class: "btn-primary" %>
  </div>
</div>
