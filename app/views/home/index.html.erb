<div class="main-container">
  <div class="intro-text">
    <div>Welcome to Cookbookly!</div>
    <div>Explore tasty recipes, favorite your finds, and share your own.</div>
  </div>

  <%= link_to "Browse Recipes", recipes_path, class: "btn-primary" %>

  <% if current_user %>
    <div class="login-logout">
      <p class="welcome-message">Welcome back, <%= current_user.username %>!</p>
      <p class="user-links">
        <%= link_to "Go to your Dashboard", dashboard_path, class: "btn-link" %> |
        <%= link_to "Log out", logout_path, method: :delete, data: { confirm: "Are you sure you want to log out?" }, class: "btn-link" %>
      </p>
    </div>
  <% else %>
    <div class="login-logout">
      <p class="guest-message">
        Not a member yet? <%= link_to "Sign up", new_user_path, class: "btn-link" %> or
        <%= link_to "Log in", login_path, class: "btn-link" %>.
      </p>
    </div>
  <% end %>

  <section class="featured-recipes-section">
    <h2 class="section-title">Featured Recipes</h2>

    <% if @recipes.present? %>
      <div class="recipe-grid">
        <% @recipes.each do |recipe| %>
          <div class="recipe-card">
            <%= link_to recipe.title, recipe_path(recipe), class: "recipe-link" %>
            <p class="recipe-summary"><%= truncate(recipe.instructions, length: 100) %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="no-recipes-message">No featured recipes yet. <%= link_to "Browse all recipes", recipes_path, class: "btn-link" %>.</p>
    <% end %>
  </section>
</div>
