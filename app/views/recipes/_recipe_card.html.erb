<div class="recipe-card">
  <%= link_to recipe.title, recipe_path(recipe), class: "recipe-link" %>

  <p class="recipe-author">By: <%= recipe.user.username %></p>

  <div class="average-rating">
    <% if recipe.reviews.any? %>
      <%= render "shared/rating_stars", rating: recipe.average_rating %>
      <span class="review-count">
        (<%= recipe.reviews.count %> <%= "review".pluralize(recipe.reviews.count) %>)
      </span>
    <% else %>
      <p>No reviews yet</p>
    <% end %>
  </div>

  <p class="recipe-summary"><%= truncate(recipe.instructions, length: 100) %></p>
</div>
